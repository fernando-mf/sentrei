{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@sentrei/*": ["node_modules/@sentrei/*/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx"
  ]
}
