{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noEmit": true,
    "paths": {
      "@sentrei/ui": ["../ui/dist"],
      "@sentrei/ui/*": ["../ui/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.tsx"
  ]
}
