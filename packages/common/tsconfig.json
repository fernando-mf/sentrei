{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@sentrei/common/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "../ui/src/hooks/hooks.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
