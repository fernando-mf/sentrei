{
  "hosting": [
    {
      "site": "sentrei-blog",
      "target": "blog",
      "public": "src/.vuepress/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run build"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "sentrei-staging-blog",
      "target": "staging-blog",
      "public": "src/.vuepress/dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run build"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
