{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "paths": {
      "@sentrei/common/*": ["../common/dist/*"],
      "@sentrei/functions/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__mocks__/**",
    "**/__tests__/*.ts",
    "**/__tests__/*.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "../common"
    },
    {
      "path": "../ui"
    }
  ]
}
