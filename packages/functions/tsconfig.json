{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": false,
    "target": "es2018",
    "lib": ["ES2018"],
    "paths": {
      "@sentrei/common/*": ["../common/dist/*"],
      "@sentrei/functions/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
