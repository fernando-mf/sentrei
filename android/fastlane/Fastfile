fastlane_version "2.28.3"

default_platform :android

platform :android do
  desc "Submit a new beta build to firebase"
  lane :beta do
      firebase_app_distribution(
            groups: "beta",
            app: "1:244894698045:android:653fa60982fdc9127fb854",
            firebase_cli_token: ENV['FIREBASE_TOKEN'],
            release_notes: ENV['GITHUB_RUN_NUMBER'],
            apk_path: "../build/app/outputs/apk/beta/debug/app-beta-debug.apk"
      )
  end

  lane :master do
      firebase_app_distribution(
            groups: "master",
            app: "1:244894698045:android:6c75642cad65daab7fb854",
            firebase_cli_token: ENV['FIREBASE_TOKEN'],
            release_notes: ENV['GITHUB_RUN_NUMBER'],
            apk_path: "../build/app/outputs/apk/master/release/app-master-release.apk"
      )
  end
end
