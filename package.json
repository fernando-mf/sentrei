{
  "name": "sentrei",
  "version": "3.13.0",
  "private": true,
  "homepage": "https://github.com/sentrei/sentrei",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentrei/sentrei.git"
  },
  "license": "MIT",
  "author": "Shun Kakinoki",
  "workspaces": [
    "sentrei/*"
  ],
  "scripts": {
    "eclint-check": "eclint check $(git ls-files)",
    "eclint-fix": "eclint fix $(git ls-files)",
    "fix": "yarn eclint-fix && yarn prettier-fix",
    "lint": "yarn eclint-check && yarn prettier-check",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "publish": "lerna publish from-package --yes",
    "release": "semantic-release",
    "release-test": "semantic-release -d",
    "test": "yarn lint && yarn release-test"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git-cz --hook || true"
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "commitizen": "^4.0.4",
    "eclint": "^2.8.1",
    "git-cz": "^4.3.1",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "prettier": "^2.0.4",
    "semantic-release": "^17.0.4"
  }
}
