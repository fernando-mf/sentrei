  lane :local do |options|
    if options[:alpha]
      build_ios_app(
        scheme: "alpha",
        export_options: {
            method: "app-store",
        },
        output_directory: "build/Runner",
        output_name: "alpha.ipa",
      )
    end
    if options[:beta]
      build_ios_app(
        scheme: "beta",
        export_options: {
            method: "app-store",
        },
        output_directory: "build/Runner",
        output_name: "beta.ipa",
      )
    end
    if options[:master]
      build_ios_app(
        scheme: "master",
        export_options: {
            method: "app-store",
        },
        output_directory: "build/Runner",
        output_name: "master.ipa",
      )
    end
  end
end
