{
  "emulators": {
    "firestore": {
      "port": "8080"
    },
    "functions": {
      "port": "5001"
    },
    "database": {
      "port": "9000"
    },
    "hosting": {
      "host": "localhost",
      "port": "5000"
    }
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "yarn run prepare-hosting"
    ]
  },
  "hosting": [{
      "site": "sentrei-master-web",
      "target": "web",
      "public": "dist/functions",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run prepare-web"],
      "rewrites": [{
        "source": "**/**",
        "function": "nextApp"
      }]
    },
    {
      "site": "sentrei-staging-master-web",
      "target": "staging-web",
      "public": "dist/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run prepare-web"],
      "rewrites": [{
        "source": "**/**",
        "function": "nextApp"
      }]
    }
  ]
}
