{
  "functions": {
    "source": "dist/functions",
    "predeploy": ["yarn run prepare-hosting"]
  },
  "hosting": [
    {
      "site": "sentrei-alpha-web",
      "target": "web",
      "public": "dist/functions",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run prepare-web"],
      "rewrites": [
        {
          "source": "**/**",
          "function": "hosting"
        }
      ]
    },
    {
      "site": "sentrei-staging-alpha-web",
      "target": "staging-web",
      "public": "dist/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "predeploy": ["yarn run prepare-web"],
      "rewrites": [
        {
          "source": "**/**",
          "function": "hosting"
        }
      ]
    }
  ]
}
