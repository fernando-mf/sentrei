{
  "name": "@sentrei/web",
  "version": "3.15.0",
  "homepage": "https://sentrei.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/sentrei/sentrei.git",
    "directory": "sentrei/web"
  },
  "license": "MIT",
  "author": "Shun Kakinoki",
  "scripts": {
    "alpha": "yarn run swap-alpha && firebase use alpha && yarn run deploy-web",
    "analyze": "cross-env ANALYZE=true next build",
    "beta": "yarn run swap-beta && firebase use beta && yarn run deploy-web",
    "build-functions": "tsc --project src/functions",
    "build-next": "next build",
    "build-public": "cpx 'src/public/**/*.*' 'dist/public' -C",
    "deploy-hosting": "firebase deploy --only functions:hosting --token $FIREBASE_TOKEN",
    "deploy-staging-web": "firebase deploy --only hosting:staging-web --token $FIREBASE_TOKEN",
    "deploy-web": "firebase deploy --only hosting:web --token $FIREBASE_TOKEN",
    "deps-copy": "cpx package.json dist/functions -C",
    "deps-install": "cd dist/functions && yarn install",
    "dev": "next",
    "export": "next export",
    "master": "yarn run swap-master && firebase use master && yarn run deploy-hosting && yarn run deploy-web",
    "prepare-hosting": "yarn run build-functions && yarn run build-next && yarn run deps-copy && yarn run deps-install",
    "prepare-web": "yarn run build-public",
    "staging-alpha": "yarn run swap-alpha && firebase use alpha && yarn run deploy-hosting && yarn run deploy-staging-web",
    "staging-beta": "yarn run swap-beta && firebase use beta && yarn run deploy-hosting && yarn run deploy-staging-web",
    "staging-master": "yarn run swap-master && firebase use master && yarn run deploy-hosting && yarn run deploy-staging-web",
    "swap-alpha": "cp alpha.firebase.json firebase.json",
    "swap-beta": "cp beta.firebase.json firebase.json",
    "swap-master": "cp master.firebase.json firebase.json"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.10",
    "@next/bundle-analyzer": "^9.3.5",
    "@sentrei/common": "^3.13.3",
    "@stripe/react-stripe-js": "^1.1.2",
    "@stripe/stripe-js": "^1.4.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "next": "^9.3.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recharts": "^1.8.5",
    "styled-components": "^5.1.0"
  },
  "devDependencies": {
    "@types/next": "^9.0.0",
    "@types/node": "^13.13.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": "10"
  },
  "publishConfig": {
    "access": "public"
  }
}
